<Window x:Class="Memory.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Grid Background="#FFB3E6F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="85*" />
            <RowDefinition Height="334*"/>
        </Grid.RowDefinitions>
        <Label Content="Memory" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="65" Width="209" FontFamily="Showcard Gothic" FontSize="24"/>
        <Label Content="Couples found:&#xD;&#xA;Couples left:&#xD;&#xA;Times tried" HorizontalAlignment="Left" Height="65" Margin="229,10,0,0" VerticalAlignment="Top" Width="155" FontFamily="Showcard Gothic"/>
        <Grid HorizontalAlignment="Left" Height="314" Grid.Row="1" VerticalAlignment="Top" Width="772" Margin="10,10,0,0" Name="table"/>
        <Button Content="Exit" HorizontalAlignment="Left" Height="65" Margin="652,10,0,0" VerticalAlignment="Top" Width="130" Background="#FF4BC6D3" FontFamily="Showcard Gothic" FontSize="24" Click="Button_Click"/>

    </Grid>
</Window>
